<div class="row padding-top">
	<div class="id-panel columns small-12">
		<div class="card">
			<div class="id-panel-name">
				<h2>{{user.name}}</h2>
				<div class="profileimg-big">
					<img src="/api/profileimage?u={{unbound xprt.useraccId}}">
				</div>
			</div>
			<div class="id-panel-lens">
				<p>{{xprt.description}}</p>
				<hr>
				<div class="row">
					<div class="small-12 columns">
						<a href="#" {{action 'openCommentPopup'}}><i class="fa fa-comment"></i> {{loc-x '/xprt_data/send_message'}}</a>
					</div>
				</div>
			</div>	
		</div> 
	</div>
	<div class="columns small-12">
		<div class="content-panel box-shadow">
			

		</div>
	</div>
</div>
